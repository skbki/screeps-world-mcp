{
  "name": "screeps-world-mcp",
  "version": "1.0.0",
  "description": "Experimental MCP (Model Context Protocol) service for Screeps World",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "screeps-world-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.72"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.0",
    "ts-jest": "^29.4.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skbki/screeps-world-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/skbki/screeps-world-mcp/issues"
  },
  "homepage": "https://github.com/skbki/screeps-world-mcp#readme",
  "keywords": [
    "screeps",
    "mcp",
    "model-context-protocol"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "author": "admon84",
  "license": "MIT"
}
